using System;

namespace FuncionesCore
{
    public class FMatematicas
    {
        public static double AreaCirculo(double pRadio)
        {
            return (Math.PI * Math.Pow(pRadio, 2));
        }

        public static double AreaRectangulo(double pBaseA, double pAltura)
        {
            return pBaseA * pAltura;
        }

        public static double AreaTriangulo(double pBaseA, double pAltura)
        {
            return ((pBaseA * pAltura) / 2);
        }

        public static bool EnteroMayorQue(int pEnteroA, int pEnteroB)
        {
            if (pEnteroA > pEnteroB)
            {
                return true;
            }
            else
            {
                return false;
            }
        }

        public static bool EnteroMayorIgualque(int pEnteroA, int pEnteroB)
        {
            if (pEnteroA >= pEnteroB)
            {
                return true;
            }
            else
            {
                return false;
            }
        }
    }
}
